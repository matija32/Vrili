<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="MyCustomTheme" parent="Theme.AppCompat.Light">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:windowBackground">@color/primary_light</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>
    
    <item name="android:listViewStyle">@style/ListViewStyle</item>
    <item name="android:buttonStyle">@style/ButtonStyle</item>
    <!--<item name="android:colorIcons">@color/icons</item>-->
    <!--<item name="android:colorDivider">@color/divider</item>-->
  </style>

  <style name="ListViewStyle" parent="@android:style/Widget.ListView">
    <item name="android:divider">@color/divider</item>
    <item name="android:background">@color/primary_dark</item>
  </style>

  <style name="ButtonStyle" parent="@android:style/Widget.Button">
    <item name="android:background">@color/accent</item>
  </style>

</resources>